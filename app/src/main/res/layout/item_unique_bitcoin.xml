<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIconHeaderItemUnique"
        android:layout_width="@dimen/image_item"
        android:layout_height="@dimen/image_item"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/ibc_icon_content_descript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/tvHeaderItemUnique"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/ibc_header_dummy"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBlackHeader"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconHeaderItemUnique"
        app:layout_constraintEnd_toStartOf="@+id/ivIconHeaderItemUnique"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivIconHeaderItemUnique" />

    <View
        android:id="@+id/viewUnderLineItem"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorUnderlineGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIconHeaderItemUnique" />


</androidx.constraintlayout.widget.ConstraintLayout>